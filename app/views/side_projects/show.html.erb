<p id="notice"><%= notice %></p>


<div class="projectDetails">

<h1>
  <b>Project title:</b>
  <%= @side_project.project_title %>
</h1>

<div class="imageShow">
  <%= image_tag(@side_project.image_url, class: 'list_image') %>
</div>


<h2>Description:</h2>

<p><%= @side_project.description %></p>

 <h2>Repo URL:</h2>
  <%= @side_project.repo_url %>



  <h2>Tags:</h2>
  <%= @side_project.tags.map { |t| t.name }.join(", ") %>


<h2>Comments</h2>
<!--also, include a way for the viewer to edit comments-->
<% @side_project.comments.each do |comment| %>
    <p>
      <b>Commenter:</b>
      <%= comment.commenter %>
    </p>

    <p>
      <b>Comment:</b>
      <%= comment.body %>
    </p>

    <p>
      <b>Created:</b>
      <%= comment.created_at %>
    </p>



<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/comment' %>


<%= link_to 'Back', side_projects_path %>
<!-- back functionality is broken site-wide -->

</div>