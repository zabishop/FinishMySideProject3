<%= form_for([@side_project, @side_project.comments.build]) do |f| %>
   <p>Leave a comment?</p>
    <div class="field">
      <%= f.label :commenter %>
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>